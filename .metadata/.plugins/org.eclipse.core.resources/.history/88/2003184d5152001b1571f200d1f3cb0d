package UI;

import java.awt.Color;
import java.awt.Container;
import java.awt.Font;
import java.awt.GridLayout;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.border.LineBorder;

public class MenuUI extends UI implements KeyListener {
	private final int MENU_COUNT=3;
	Font font;
	LineBorder lbSelect;
	
	JLabel jlMenu[];
	String strMenu[]={"Game Start", "How To Play", "Score Board"};
	Container ct;
	
	int menu;

	public MenuUI(UIChanger uic) {
		super(uic);
		font = new Font("굴림", Font.BOLD, 30);
		lbSelect=new LineBorder(Color.black, 2);
		
		jlMenu=new JLabel[MENU_COUNT];
		for(int i=0;i<MENU_COUNT;i++) {
			jlMenu[i]=new JLabel(strMenu[i]);
			jlMenu[i].setFont(font);
			jlMenu[i].setForeground(Color.black);
		}
		menu=0;
		jlMenu[menu].setBorder(lbSelect);


		ct = getContentPane();
		ct.setLayout(new GridLayout(MENU_COUNT, 1));
		for(int i=0;i<MENU_COUNT;i++) {
			ct.add(jlMenu[i]);
		}

		addKeyListener(this);
		setFocusable(true);
		System.out.println("Menu KeyListener");
		setTitle("Select");
		setSize(400, 200);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
	}

	public void upMenu() {
		jlMenu[menu].setBorder(null);
		System.out.println("up");
		if(menu==0) {
			menu=MENU_COUNT-1;
		} else {
			menu--;
		}
		jlMenu[menu].setBorder(lbSelect);
	}
	
	public void downMenu() {
		jlMenu[menu].setBorder(null);
		System.out.println("down");
		if(menu==2) {
			menu=0;
		} else {
			menu++;
		}
		jlMenu[menu].setBorder(lbSelect);
	}

	@Override
	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		if (e.getKeyCode() == KeyEvent.VK_UP) {
			upMenu();
		} else if (e.getKeyCode() == KeyEvent.VK_DOWN) {
			downMenu();
		} else if (e.getKeyCode() ==KeyEvent.VK_ENTER) {
			removeKeyListener(this);
			setFocusable(false);
			setVisible(false);
			if(menu==0) {
				
			} else if(menu==1) {
				
			} else if(menu==2) {
				
			}
			uic.changeHow();
		}
	}

	@Override
	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub

	}
}
