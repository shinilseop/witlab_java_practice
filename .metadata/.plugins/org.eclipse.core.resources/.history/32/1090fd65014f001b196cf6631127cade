package JAVA_01_first_02;

import java.util.ArrayList;

public class Convert_num {
	int num;
	StringBuffer bin=new StringBuffer();
	StringBuffer octa=new StringBuffer();
	StringBuffer hexa=new StringBuffer();
	String out;
	Convert_num(int num){
		this.num=num;
	}
	
	void toBinary() {
		int tmp=num;
		while(tmp>2) {
			bin.append(tmp%2);
			tmp/=2;
		}
		if(tmp==1) {
			bin.append(1);
		} else if(tmp==2) {
			bin.append(0);
			bin.append(1);
		}
		out=bin.toString();
	}
	
	void toOcta() {
		int i;
		String convertCopy=bin.reverse().toString();
		for(i=3;i<convertCopy.length();i+=3) {
			String tmp=convertCopy.substring(i-3, i);
			int num=0;
			int mul=1;
			for(int j=0;j<tmp.length();j++) {
				num+=(tmp.charAt(j)-48)*mul;
				mul*=2;
			}
			octa.append(num);
		}
		if(convertCopy.length()<=i) {
			String tmp=convertCopy.substring(i-3);
			int num=0;
			int mul=1;
			for(int j=0;j<tmp.length();j++) {
				num+=(tmp.charAt(j)-48)*mul;
				mul*=2;
			}
			octa.append(num);
		}
		out=octa.toString();
	}
	
	void toHexa() {
		int i;
		String convertCopy=bin.reverse().toString();
		for(i=4;i<convertCopy.length();i+=4) {
			String tmp=convertCopy.substring(i-4, i);

			int num=0;
			int mul=1;
			for(int j=0;j<tmp.length();j++) {
				num+=(tmp.charAt(j)-48)*mul;
				mul*=2;
			}
			hexa.append(num);
		}
		if(convertCopy.length()<=i) {
			String tmp=convertCopy.substring(i-4);
			System.out.println(tmp+" "+convertCopy.toString()+" "+(i-4));
			int num=0;
			int mul=1;
			for(int j=0;j<tmp.length();j++) {
				num+=(tmp.charAt(j)-48)*mul;
				mul*=2;
			}
			hexa.append(num);
		}
		out=hexa.toString();
	}
	
	String getConvert() {
		return bin.reverse().toString();
	}
}
