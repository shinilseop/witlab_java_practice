package UI;

public class UIManager {
	UI ui;
	UIChanger uic;

	public UIManager() {
		uic=new UIChanger() {
			public void changeMenu() {
				ui = new MenuUI(uic);
			}
			public void changeHow() {
				ui = new HowUI(uic);
			}
			public void changeGame() {
				ui = new GameUI(uic);
			}
			public void changeScore() {
				ui = new ScoreUI(uic);
			}
		};
	}

	public void start() {
		ui=new TitleUI(uic);
	}

	public void select() {
		ui = new MenuUI();
	}

	public void how() {
		ui = new HowUI();
	}

	public void game() {

	}
	
	public void score() {

	}

}
