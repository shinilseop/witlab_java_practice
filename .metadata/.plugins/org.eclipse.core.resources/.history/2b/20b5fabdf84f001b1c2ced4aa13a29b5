	//private final String USER_NAME="root";
	//private final String PASSWORD="1234";
	
	public static void main(String args[]) {
		String JDBC_DRIVER="com.mysql.jdbc.Driver";
		String DB_URL="jdbc:mysql://localhost:3306/chat_log";
		
		String USER_NAME="root";
		String PASSWORD="1234";
		
		Connection conn=null;
		Statement state=null;
		
		try {
			Class.forName(JDBC_DRIVER);
			conn=DriverManager.getConnection(DB_URL, USER_NAME, PASSWORD);
			System.out.println("[ MySQL Connection ]\n");
			state=conn.createStatement();
			select(conn, state);
			/*
			 * String sql; sql="select * from chat_log"; ResultSet
			 * rs=state.executeQuery(sql);
			 * 
			 * while(rs.next()) { String id=rs.getString("id"); String
			 * chat_content=rs.getString("chat_content"); String time=rs.getString("time");
			 * System.out.println(id+"("+time+")"+":"+chat_content); } rs.close();
			 */
			
			state.close();
			conn.close();
		} catch(Exception e) {
			
		}
	}
	
	static void select(Connection conn, Statement state) {
		try {
			String sql;
			sql="select * from chat_log";
			ResultSet rs = state.executeQuery(sql);
			
			while(rs.next()) {
				String id=rs.getString("id");
				String chat_content=rs.getString("chat_content");
				String time=rs.getString("time");
				System.out.println(id+"("+time+")"+":"+chat_content);
			}
			
			rs.close();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	static void query(Connection conn, Statement state) {
		try {
			String sql;
			sql="select * from chat_log";
			ResultSet rs = state.executeQuery(sql);
			
			while(rs.next()) {
				String id=rs.getString("id");
				String chat_content=rs.getString("chat_content");
				String time=rs.getString("time");
				System.out.println(id+"("+time+")"+":"+chat_content);
			}
			
			rs.close();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
