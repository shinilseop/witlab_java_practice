package Exam02;

import java.util.Random;

public class Pig extends Things {
	
	boolean goLeft;
	
	Pig(int x,int y, JLabel image){
		super(x,y, image);
		goLeft=true;
	}
	
	public void run() {
		Random r=new Random();
		
		while(true) {
			int move=r.nextInt(30)+20;
			if(goLeft) {
				if(x-move<=62) {
					x=62;
					goLeft=false;
				} else {
					x-=62;
				}
			} else {
				if(x+move>=538) {
					x=62;
					goLeft=true;
				} else {
					x+=62;
				}
			}
		}
	}
}
