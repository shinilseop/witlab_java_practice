package Client;

import java.net.DatagramPacket;
import java.net.DatagramSocket;

import javax.swing.JTextArea;

public class Fandom extends Thread {
	int id;
	JTextArea jtaLog;
	MsgSender ms;
	MsgReicever mr;

	DatagramSocket ds;
	DatagramPacket dp;

	int cPort, sPort;
	String ip;
	byte buffer[];

	Fandom(int cPort, int sPort, String ip, int id, JTextArea jtaLog, MsgSender ms) {
		this.id = id;
		this.jtaLog = jtaLog;
		this.ms = ms;
		this.cPort = cPort;
		this.sPort=sPort;
		try {
			ds = new DatagramSocket(cPort);
			buffer = new byte[66536];
			dp = new DatagramPacket(buffer, buffer.length);
			ms = new MsgSender(ip, sPort);
			mr = new MsgReicever(cPort);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public void run() {
		mr.start();
		while (true) {
			try {
				ms.sendMsg(id + "");
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
				break;
			}
		}
	}
}
