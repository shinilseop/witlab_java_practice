package UI;

public class UIManager {
	UI ui;
	UIChanger uic;

	public UIManager() {
		uic=new UIChanger() {
			public void goMenu() {
				ui = new MenuUI(uic);
			}
			public void goHow() {
				ui = new HowUI(uic);
			}
			public void goGame() {
				ui = new GameUI(uic);
			}
			public void goScore() {
				ui = new ScoreUI(uic);
			}
			public void goRegister() {
				ui = new RegisterUI(uic);
			}
			public void goLogin() {
				ui=new LoginUI()
			}
		};
	}

	public void start() {
		ui=new TitleUI(uic);
	}
	
}
