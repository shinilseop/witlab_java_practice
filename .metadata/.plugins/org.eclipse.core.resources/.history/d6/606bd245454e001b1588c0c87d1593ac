package JAVA_01_last;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;

public class WordFinder {
	File f;
	FileReader fr;
	String content;
	
	WordFinder(){
		try {
			f=new File("word.txt");
			fr=new FileReader(f);
			BufferedReader br=new BufferedReader(fr);
			String line;
			while((line=br.readLine())!=null) {
				content+=line+"\n";
			}
		} catch (Exception e) {
		}
	}
	
	void findWord() {
		
	}
}
