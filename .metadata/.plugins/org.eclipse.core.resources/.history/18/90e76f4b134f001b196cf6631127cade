package Exam02;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class ServerThread extends Thread {
	ServerSocket ss;
	Socket s;
	
	ServerThread(int port){
			try {
				ss=new ServerSocket(port);
				this.run();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
	}
	
	public void run() {
		while(true) {
			s.accept();
		}
	}
}
