package UI;

import javax.swing.ImageIcon;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class UpdateBoard extends Thread {
	JPanel board;
	JLabel jlBlock[][];
	int block[][];
	ImageIcon iiBlock[];
	boolean isRun;

	UpdateBoard(JPanel Board, JLabel jlBlock[][], int block[][]) {
		this.board = board;
		this.jlBlock=jlBlock;
		this.block=block;
		iiBlock=new ImageIcon[7];
		iiBlock[0]=new ImageIcon("blue_block.png");
		iiBlock[1]=new ImageIcon("green_block.png");
		iiBlock[2]=new ImageIcon("orange_block.png");
		iiBlock[3]=new ImageIcon("purple_block.png");
		iiBlock[4]=new ImageIcon("red_block.png");
		iiBlock[5]=new ImageIcon("sky_block.png");
		iiBlock[6]=new ImageIcon("yellow_block.png");
	}

	public void run() {
		isRun = true;
		while (isRun) {
			for (int i = 0; i < block.length; i++) {
				for (int j = 0; j < block[0].length; j++) {
					jlBlock[i][j].setIcon(iiBlock[block[i][j]-1]);
				}
			}
		}
	}
}
