		ct.setLayout(new GridLayout(2, 1));
		ct.add(jlStart);
		ct.add(jlHow);

		setTitle("Select");
		setSize(400, 200);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
	}

